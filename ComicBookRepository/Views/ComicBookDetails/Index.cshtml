@model IEnumerable<ComicBookDetailsDTO>
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Index";
}

<h1>Comic Book Details for @Html.DisplayFor(model => model.FirstOrDefault().BookTitle)</h1>

<p>
    <a asp-action="Create"  asp-route-id="@Model.FirstOrDefault()?.TitleId">Create New</a>
</p>
<table class="table" id="tblDetails">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialIssue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Own)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Want)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialIssue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.Own, new { @class = "own-checkbox", id = $"own{item.Id}" })
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.Want, new { @class = "want-checkbox", id = $"want{item.Id}" })
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
